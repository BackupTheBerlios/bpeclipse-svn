<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.bpeclipse.plugin.BPEclipsePlugin"
   name="Backpack Eclipse"
   version="0.1"
   provider-name="Backpack Eclipse"
   class="org.bpeclipse.plugin.BPEclipsePlugin">
   <runtime>
      <library name="lib/log4j-1.2.8.jar">
         <export name="*"/>
      </library>
      <library name="lib/backpackAPI.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-codec-1.3.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-httpclient-3.0-rc3.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-logging-1.0.4.jar">
         <export name="*"/>
      </library>
      <library name="lib/jdom.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
   </requires>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Backpack Eclipse"
            id="bpeclipse_plugin">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="bpeclipse_plugin"
            class="org.bpeclipse.views.SampleView"
            id="org.bpeclipse.views.SampleView">
      </view>
      <view
            category="bpeclipse_plugin"
            class="org.bpeclipse.views.BPPagesView"
            icon="icons/sample.gif"
            id="org.bpeclipse.views.BPPagesView"
            name="Backpack Pages"/>
   </extension>

</plugin>
